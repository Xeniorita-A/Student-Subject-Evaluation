<UserControl x:Class="Student_Subject_Evaluation.MVVM.View.Curriculum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Student_Subject_Evaluation.MVVM.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:Student_Subject_Evaluation.MVVM.View_Model"
             mc:Ignorable="d" 
             Height="auto" Width="Auto"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch" FontFamily="Tienne Black">

    <UserControl.DataContext>
        <viewModel:CurriculumViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="334*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="white" 
                Grid.RowSpan="3">
            <StackPanel Margin="80,25,50,0" 
                        Height="67" 
                        VerticalAlignment="Top">
                <TextBlock Text="Course Curriculum" 
                       Foreground="#FFDF612B" FontSize="45"  
                       FontWeight="Bold"
                       FontFamily="Tienne"
                       VerticalAlignment="Center"/>
            </StackPanel>

        </Border>

        <!--Code for popupbox-->
        <StackPanel>
            <materialDesign:PopupBox 
                HorizontalAlignment="Right"
                Margin="0 20 20 0"
                PlacementMode="BottomAndAlignRightEdges"
                StaysOpen="False"
                Height="50">
                <StackPanel Margin="10"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <StackPanel>
                        <Button ToolTip="Are you Having trouble using the system?"
                            Margin="10 0 10 0"
                            Content="Help" Click="Help_Click"/>
                    </StackPanel>
                    <StackPanel>
                        <Button x:Name="btn_exit" Content="Exit"
                            ToolTip="Exit Application"
                            Click="ExitApp" Margin="10 0 10 0"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:PopupBox>
        </StackPanel>

        <!--Orange line-->
        <StackPanel Grid.Row="1" Grid.RowSpan="2" >
            <StackPanel Grid.Row="1" Margin="0">
                <materialDesign:Card Height="10" 
                    VerticalAlignment="Top" 
                    Background="#f1ac6a" 
                    d:LayoutOverrides="LeftMargin, RightMargin, 
                    TopMargin, BottomMargin"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    materialDesign:ShadowAssist.ShadowEdges="Bottom"/>
            </StackPanel>
            <materialDesign:Card Margin="0">
                <TabControl 
                     Width="Auto" Height="Auto" 
                     HorizontalContentAlignment="Left" 
                     Style="{StaticResource MaterialDesignNavigatilRailTabControl}" 
                     TabStripPlacement="Top" materialDesign:ShadowAssist.ShadowDepth="Depth2"
                     materialDesign:ShadowAssist.ShadowEdges="Bottom"
                     Margin="0" BorderThickness="0,0,0,0"
                     >

                    <!--Course Curriculum Table -->
                    <TabItem
                    Header="Course Curriculum List" 
                        IsSelected="True"
                        FontFamily="Tienne" FontSize="20" 
                        FontWeight="Bold" Height="70" 
                        Width="250">
                        <materialDesign:Card Margin="30,30,30,200"
                             UniformCornerRadius="20"
                             Background="White" VerticalAlignment="Top"
                             HorizontalAlignment="Center"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                             materialDesign:ShadowAssist.ShadowEdges="Bottom,Left">
                            <!--Stackpanel for the Course Curriculum List-->
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="30">

                                <!--Search box and Icon-->
                                <StackPanel Height="50" Margin="0,0,0,20" >
                                    <TextBox x:Name="txt_searchCurr"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Height="40" Width="240"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Padding="10 10"
                                    FontFamily="Tienne"
                                    FontWeight="Bold"
                                    FontSize="16"
                                    BorderBrush="#e36934"
                                    Margin="50,5,10,10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Foreground="#e36934"
                                    materialDesign:HintAssist.Hint="SEARCH" 
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    TextChanged="TextSearchCurr_Changed"/>
                                    
                                    
                                </StackPanel>

                                <!--Datagrid for the Course Curriculum-->
                                <DataGrid x:Name="Course_list"
                                    FontFamily="Roboto"
                                    FontSize="14"
                                    CanUserSortColumns="True"
                                    CanUserAddRows="False"
                                    materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                                    materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                                    ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                                    HorizontalContentAlignment="Stretch" 
                                    VerticalContentAlignment="Stretch"
                                    ToolTip="Course Curriculum"
                                    HorizontalAlignment="Center"
                                    Width="1040" Height="440"
                                    IsReadOnly="True" 
                                    IsTextSearchEnabled="True" 
                                    CanUserResizeRows="False" 
                                    RowDetailsVisibilityMode="Visible"
                                    CanUserReorderColumns="False" 
                                    CanUserResizeColumns="False" 
                                    GridLinesVisibility="None"
                                    BorderThickness="0" 
                                    Padding="5,5,5,5" FontWeight="Normal" Margin="10,0,10,10" VerticalAlignment="Top">

                                    <!--<ColumnHeader>-->
                                    <DataGrid.Columns>
                                        <DataGridTextColumn 
                                            Header="Code" 
                                            Binding="{Binding CourseCode}"
                                            Width="100" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn 
                                            Header="Subject Title" 
                                            Binding="{Binding CourseTitle}"
                                            Width="380" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn 
                                            Header="Units" 
                                            Binding="{Binding CourseUnits}"
                                            Width="60" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn 
                                            Header="Pre Req" 
                                            Binding="{Binding CoursePrereq}"
                                            Width="120" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"
                                            />
                                        <DataGridTextColumn 
                                            Header="Subject Year" 
                                            Binding="{Binding CourseYearlvl}"
                                            Width="100" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"
                                            />
                                        <DataGridTextColumn 
                                            Header="Subject Semester" 
                                            Binding="{Binding CourseSem}"
                                            Width="150" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"
                                            />
                                        <DataGridTextColumn 
                                            Header="Batch No." 
                                            Binding="{Binding CourseBatch}"
                                            Width="80" 
                                            FontFamily="Tienne" 
                                            FontSize="16" 
                                            IsReadOnly="True"
                                            />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button x:Name="btn_refresh"
                                        Height="40"
                                        Width="100"
                                        Content="REFRESH"
                                        BorderThickness="0"
                                        FontFamily="Tienne" FontWeight="Bold"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#f1ac6a" Foreground="White"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        materialDesign:RippleAssist.Feedback="#DD000000" 
                                        Click="refresh_List" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,0"
                                    ></Button>
                            </StackPanel>
                        </materialDesign:Card>
                    </TabItem>

                    <!--Importing New Course Curriculum Table-->
                    <TabItem
                        Header="Import New Curriculum"
                        FontFamily="Tienne" FontSize="20" 
                        FontWeight="Bold" Height="70" 
                        Width="250">
                        <materialDesign:Card Margin="30,30,30,50"
                             UniformCornerRadius="20"
                             Background="White" VerticalAlignment="Top"
                             HorizontalAlignment="Center"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                             materialDesign:ShadowAssist.ShadowEdges="Bottom,Left">

                            <!--Grid for the Course Curriculum List where we load the excel file-->
                            <Grid Width="Auto" Margin="0,0,0,20" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="49*"/>
                                    <RowDefinition Height="151*"/>
                                    <RowDefinition Height="331*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Import New Curriculum:" FontFamily="Tienne" 
                                   FontWeight="Bold"
                                   FontSize="20" 
                                   Foreground="#e36934"
                                   HorizontalAlignment="Left" Padding="4,4,4,4" Margin="30,15,0,2" Width="237" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>

                                <!--Deparrtment-->
                                <ComboBox x:Name="cbx_currDepartment" Margin="330,0,0,16"
                                      Style="{StaticResource MaterialDesignFilledComboBox}"
                                      materialDesign:HintAssist.Hint="Department" Padding="10 0 0 0"
                                      FontFamily="Roboto" Height="40"
                                      FontSize="16" FontWeight="Bold" BorderThickness="0,0,0,1" 
                                      VerticalAlignment="Bottom" 
                                      d:LayoutOverrides="VerticalAlignment" 
                                      RenderTransformOrigin="0.49,-0.186" 
                                      Grid.Row="2" HorizontalAlignment="Left" Width="250">
                                    <ComboBoxItem Content="BSCE" />
                                    <ComboBoxItem Content="BSEE" />
                                    <ComboBoxItem Content="BSIT" />
                                </ComboBox>
                                <!--File Name-->
                                <Label Content="File Path:" FontFamily="Tienne" 
                                   FontWeight="Bold"
                                   FontSize="16" 
                                   Foreground="#e36934"
                                   HorizontalAlignment="Left" 
                                   Padding="4,4,4,4" 
                                   Margin="40,16,0,0" 
                                   Height="34" VerticalAlignment="Top" Grid.Row="1" d:LayoutOverrides="HorizontalAlignment" Width="77"/>
                                <TextBox x:Name="txt_Filepath"
                                   Height="40"
                                   Margin="160,10,0,0"
                                   Padding="10 0 0 0"
                                   BorderThickness="0"
                                   VerticalContentAlignment="Stretch"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   FontSize="16"
                                   FontFamily="Roboto"
                                   FontWeight="Regular"
                                   materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                   materialDesign:TextFieldAssist.HasClearButton="True"
                                   materialDesign:HintAssist.Foreground="#f1ac6a" 
                                   CaretBrush="#FFE36934" 
                                   SelectionBrush="#FFF1AC6A"
                                   VerticalAlignment="Top"
                                   materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                                   Style="{StaticResource MaterialDesignFilledTextBox}" 
                                         Grid.Row="1" Width="650" KeyDown="txt_Filepath_KeyDown"/>
                                <!--Batch Number-->
                                <TextBox x:Name="txt_currBatch" Margin="40,0,750,20"
                                      materialDesign:HintAssist.Hint="Batch No." Padding="10 0 0 0"
                                      FontSize="16" FontWeight="Bold" 
                                      VerticalAlignment="Bottom" 
                                      Grid.Row="2"
                                      Height="40" Width="250"
                                      Foreground="Black"
                                      FontFamily="Roboto"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                      materialDesign:TextFieldAssist.HasClearButton="True"
                                      materialDesign:HintAssist.Foreground="#f1ac6a" 
                                      CaretBrush="#FFE36934" 
                                      SelectionBrush="#FFF1AC6A"
                                      TextWrapping="Wrap"
                                      materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                                      Style="{StaticResource MaterialDesignFilledTextBox}">
                                </TextBox>

                                <!--Import New Curriculum-->
                                <Button x:Name="btn_choose"
                                    Content="CHOOSE"
                                    Margin="0,14,48,0"
                                    BorderThickness="0,0,0,0"
                                    Height="32"
                                    FontFamily="Tienne" FontWeight="Bold"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#f1ac6a" Foreground="White"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                    materialDesign:RippleAssist.Feedback="#DD000000" 
                                    Click="btnChoose" 
                                    materialDesign:HintAssist.Hint="Choose and Load file"
                                    Grid.Row="1" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Right" 
                                    Width="120"/>

                                <Button x:Name="btn_saveCurriculum"
                                    Content="SAVE"
                                    Margin="0,0,48,20"
                                    BorderThickness="0,0,0,0"
                                    FontFamily="Tienne" FontWeight="Bold"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#f1ac6a" Foreground="White"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                    materialDesign:RippleAssist.Feedback="#DD000000" 
                                    Grid.Row="2" RenderTransformOrigin="0.567,-0.45" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Click="btn_saveCurriculum_Click"/>
                                <!--Semester-->

                                <!--This is the List-->
                                <StackPanel Grid.Row="2" Margin="30,20,30,0" VerticalAlignment="Top" Height="454">
                                    <!--Datagrid for the Course Curriculum-->
                                    <DataGrid x:Name="Import_list"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        CanUserSortColumns="True"
                                        CanUserAddRows="False"
                                        materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                                        materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                                        ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                                        HorizontalContentAlignment="Stretch" 
                                        VerticalContentAlignment="Stretch"
                                        ToolTip="Course Curriculum from CSV file"
                                        HorizontalAlignment="Center"
                                        Width="950" Height="350"
                                        IsReadOnly="True" 
                                        IsTextSearchEnabled="True" 
                                        CanUserResizeRows="False" 
                                        RowDetailsVisibilityMode="Visible"
                                        CanUserReorderColumns="False" 
                                        CanUserResizeColumns="False" 
                                        GridLinesVisibility="None"
                                        BorderThickness="0" 
                                        Padding="5,5,5,5" FontWeight="Normal" Margin="10,0,10,50" VerticalAlignment="Top">
                                    </DataGrid>
                                    
                                </StackPanel>
                                <Label Content="*Note: Please choose the Batch no. and department before saving" FontFamily="Tienne" 
                                    FontWeight="Bold"
                                    FontSize="12" 
                                    Foreground="#e36934"
                                    HorizontalAlignment="Left" 
                                    Padding="4,4,4,4" 
                                    Margin="40,385,0,0" 
                                    Height="34" VerticalAlignment="Top" Grid.Row="2" Width="540"/>
                            </Grid>
                        </materialDesign:Card>
                    </TabItem>
                </TabControl>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>