<UserControl x:Class="Student_Subject_Evaluation.MVVM.View.Evaluation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:Student_Subject_Evaluation.MVVM.View_Model"
             mc:Ignorable="d" 
             Height="auto" Width="Auto"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.DataContext>
        <viewModel:EvaluationViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Background="white" Grid.RowSpan="2">
            <StackPanel Margin="80,25,50,0" Height="67" VerticalAlignment="Top">
                <TextBlock Text="Subject Evaluation" 
                       Foreground="#FFDF612B" FontSize="45"  
                       FontWeight="Bold"
                       FontFamily="Tienne"
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!--Code for popupbox-->
        <StackPanel>
            <materialDesign:PopupBox 
                HorizontalAlignment="Right"
                Margin="0 20 20 0"
                PlacementMode="BottomAndAlignRightEdges"
                StaysOpen="False"
                Height="50">
                <StackPanel Margin="10"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <StackPanel>
                        <Button ToolTip="Are you Having trouble using the system?"
                            Margin="10 0 10 0"
                            Content="Help" Click="btn_help_Click"/>
                    </StackPanel>
                    <StackPanel>
                        <Button x:Name="btn_exit" Content="Exit"
                            ToolTip="Exit Application"
                            Click="exitApp" Margin="10 0 10 0"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:PopupBox>

        </StackPanel>
        
        <!--Orange line-->
        <StackPanel Grid.Row="1">
            <materialDesign:Card Height="10" 
                    VerticalAlignment="Top" 
                    Background="#f1ac6a" 
                    d:LayoutOverrides="LeftMargin, RightMargin, 
                    TopMargin, BottomMargin"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    materialDesign:ShadowAssist.ShadowEdges="Bottom"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <materialDesign:Card Grid.Row="1" Margin="30" Height="auto" Width="auto"
                             UniformCornerRadius="20"
                             Background="White"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                             materialDesign:ShadowAssist.ShadowEdges="Bottom,Left">

                <StackPanel Width="400" Margin="30">
                    <Label Content="EXPORT EVALUATION FORM:" FontFamily="Roboto" 
                           FontWeight="Bold"
                           FontSize="20" 
                           Foreground="#e36934"
                           HorizontalAlignment="Left" Margin="0,0,0,30"/>

                    <!--Deparrtment-->
                    <ComboBox x:Name="cbx_evalDepartment" Margin="0,0,0,15"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          materialDesign:HintAssist.Hint="Department"
                          Width="250" Padding="10"
                          FontFamily="Roboto"
                          FontSize="16" FontWeight="Bold">
                        <ComboBoxItem Content="BSCE" />
                        <ComboBoxItem Content="BSEE" />
                        <ComboBoxItem Content="BSIT" />
                    </ComboBox>

                    <!--Year Level-->
                    <ComboBox x:Name="cbx_evalYearlevel" Margin="0,0,0,15"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          materialDesign:HintAssist.Hint="Year Level"
                          Width="250" Padding="10"
                          FontFamily="Roboto"
                          FontSize="16" FontWeight="Bold">
                        <ComboBoxItem Content="First Year" />
                        <ComboBoxItem Content="Second Year" />
                        <ComboBoxItem Content="Third Year" />
                        <ComboBoxItem Content="Fourth Year" />
                    </ComboBox>

                    <!--Semester-->
                    <ComboBox x:Name="cbx_evalSemester" Margin="0,0,0,15"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          materialDesign:HintAssist.Hint="Semester"
                          Width="250" Padding="10"
                          FontFamily="Roboto"
                          FontSize="16" FontWeight="Bold">
                        <ComboBoxItem Content="First Semester" />
                        <ComboBoxItem Content="Second Semester" />
                    </ComboBox>

                    <!--Batch Number-->
                    <TextBox x:Name="txt_currYear" Margin="0,0,0,15"
                           materialDesign:HintAssist.Hint="Curriculum Year" Padding="10 0 0 0"
                                              FontSize="16" FontWeight="Bold" 
                                              VerticalAlignment="Bottom" 
                                              Height="40" Width="250"
                                              Foreground="Black"
                                              FontFamily="Roboto"
                                              materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                              materialDesign:TextFieldAssist.HasClearButton="True"
                                              materialDesign:HintAssist.Foreground="#f1ac6a" 
                                              CaretBrush="#FFE36934" 
                                              SelectionBrush="#FFF1AC6A"
                                              TextWrapping="Wrap"
                                              materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                                              Style="{StaticResource MaterialDesignFilledTextBox}">
                    </TextBox>
                    
                    <!--Import New Curriculum-->
                    <Button x:Name="btn_exportEval"
                            Content="EXPORT"
                            Margin="0,50,0,50"
                            BorderThickness="0" FontSize="16"
                            Height="40" Width="150"
                            FontFamily="Tienne" FontWeight="Bold"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#f1ac6a" Foreground="White"
                            materialDesign:ShadowAssist.ShadowDepth="Depth2"
                            materialDesign:RippleAssist.Feedback="#DD000000" Click="btn_exportEval_Click"/>  
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>

    </Grid>
</UserControl>