                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30" Visibility="Hidden"/>
                            <TextBox x:Name="unitsTaken" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               Text="0"
                                               FontSize="16" Margin="145,40,0,352" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30" Visibility="Hidden"/>
                            <TextBox x:Name="unitsLacking" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               Text="0"
                                               FontSize="16" Margin="206,40,0,352" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30" Visibility="Hidden"/>
                            <TextBox x:Name="totalUnits" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               Text="0"
                                               FontSize="16" Margin="112,40,0,352" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30" Visibility="Hidden"/>
                            <Label Content="Student ID" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,24,0,334" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                            <TextBlock x:Name="txt_ReportStudNum"
                                               Height="40" Width="200"
                                               Margin="10,66,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a"
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"/>
                            <Label Content="Student Name" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,63,0,252" 
