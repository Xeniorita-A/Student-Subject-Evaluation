                                               FontWeight="Bold"
                                               FontSize="16" Margin="4,-5,0,352" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                                        <TextBox x:Name="txt_getStudID" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               Text="0"
                                               FontSize="16" Margin="175,-4,0,352" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30" Visibility="Hidden"/>
                                        <Label Content="Student ID" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,24,0,334" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                                        <TextBlock x:Name="txt_StudentNum"
                                               Height="40" Width="200"
                                               Margin="10,46,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a"
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"/>
                                        <Label Content="Student Name" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,63,0,252" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                                        <TextBlock x:Name="txt_StudentName"
                                               Height="40" Width="200"
                                               Margin="10,108,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"/>
                                        <TextBlock x:Name="txt_StudNameCheck"
                                               Height="40" Width="200"
                                               Margin="10,108,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap" Visibility="Hidden"/>
                                        <Label Content="Department" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,137,0,202" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                                        <TextBlock x:Name="txt_StudentDep"
                                               Height="40" Width="200"
                                               Margin="10,174,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"/>
                                        <TextBlock x:Name="txt_CheckStudentDep"
                                               Height="40" Width="200"
                                               Margin="10,174,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap" Visibility="Hidden"/>
                                        <Label Content="Curriculum Year" FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="16" Margin="5,201,0,131" 
                                               HorizontalAlignment="Left"
                                               Foreground="#e36934" Height="30"/>
                                        <TextBlock x:Name="txt_StudentCurrYear"
                                               Height="40" Width="200"
                                               Margin="10,237,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap"/>
                                        <TextBlock x:Name="txt_CheckStudentBatch"
                                               Height="40" Width="200"
                                               Margin="10,237,0,0"
                                               Padding="10 10"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               FontSize="14"
                                               FontFamily="Roboto"
                                               materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                               materialDesign:TextFieldAssist.HasClearButton="True"
                                               materialDesign:HintAssist.Foreground="#f1ac6a" 
                                               VerticalAlignment="Top"
                                               TextWrapping="Wrap" Visibility="Hidden"/>
                                    </Grid>
                                </Grid>

                                <!--File Name-->
                                <Label Content="File Path:" FontFamily="Tienne" 
                                           FontWeight="Bold"
                                           FontSize="14" 
                                           Foreground="#e36934"
                                           HorizontalAlignment="Left" 
                                           Padding="4,4,4,4" 
                                           Margin="35,12,0,10" VerticalAlignment="Top" Grid.Row="1" d:LayoutOverrides="HorizontalAlignment" Width="77" Height="25"/>
                                <TextBox x:Name="txt_GradeFilepath"
                                           Margin="117,0,0,0"
                                           Padding="10 0 0 0"
                                           BorderThickness="0"
                                           VerticalContentAlignment="Stretch"
                                           HorizontalAlignment="Left"
                                           Foreground="Black"
                                           FontSize="12"
                                           FontFamily="Roboto"
                                           FontWeight="Regular"
                                           materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                           materialDesign:TextFieldAssist.HasClearButton="True"
                                           materialDesign:HintAssist.Foreground="#f1ac6a" 
                                           CaretBrush="#FFE36934" 
                                           SelectionBrush="#FFF1AC6A"
                                           VerticalAlignment="Center"
                                           materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                                           Style="{StaticResource MaterialDesignFilledTextBox}" 
                                           Grid.Row="1" Width="696" KeyDown="txt_GradeFilepath_KeyDown" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Height="30" ToolTip="File path"/>

                                <!--choose excel file to import-->
                                <Button x:Name="btn_chooseFile"
                                            Content="CHOOSE"
                                            Margin="0,7,30,0"
                                            BorderThickness="0,0,0,0"
                                            FontFamily="Tienne" FontWeight="Bold"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#f1ac6a" Foreground="White"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                            materialDesign:RippleAssist.Feedback="#DD000000" 
                                            Click="btnChooseFile" 
                                            materialDesign:HintAssist.Hint="Choose and Load file"
                                            Grid.Row="1" 
                                            HorizontalAlignment="Right" 
                                            Width="120" VerticalAlignment="Top"/>

                                <Button x:Name="btn_saveStudGrade"
                                            Content="SAVE"
                                            Margin="81,353,30,10"
                                            BorderThickness="0,0,0,0"
                                            FontFamily="Tienne" FontWeight="Bold"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#f1ac6a" Foreground="White"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                            materialDesign:RippleAssist.Feedback="#DD000000" 
                                            Grid.Row="2" RenderTransformOrigin="0.567,-0.45" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Click="btn_saveStudGrade_click"/>
                            </Grid>
                        </materialDesign:Card>
                    </WrapPanel>
                </TabItem>

                <!--Course Student List Table-->
                <TabItem
                    Header="Student List"
                        FontFamily="Tienne" FontSize="20" 
                        FontWeight="Bold" Height="50" 
                        Width="250" IsSelected="True">
                    <WrapPanel Margin="30,10,30,30"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top">
                        <materialDesign:Card 
                             UniformCornerRadius="20"
                             Background="White" Padding="10"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                             materialDesign:ShadowAssist.ShadowEdges="Bottom,Left"
                             HorizontalAlignment="Center" VerticalAlignment="Top"
                             Height="Auto" Width="Auto" d:LayoutOverrides="Height" Margin="0,10,0,20">

                            <!--Stackpanel for the Student List-->
                            <!--Contents of Students' List-->
                            <StackPanel
                                     Height="Auto"
                                     Background="White"
                                     materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                     materialDesign:ShadowAssist.ShadowEdges="Bottom,Left">
                                <!--Search box and Icon-->
                                <Grid Height="56" Margin="20,10,20,0"
                                                        VerticalAlignment="Top">
                                    <TextBox x:Name="txt_searchStudents"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            VerticalAlignment="Center"
                                            Height="35" Width="250"
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            Padding="10 10"
                                            FontFamily="Tienne"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            BorderBrush="#e36934"
                                            Margin="50,0,0,0"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            HorizontalAlignment="Right"
                                            materialDesign:HintAssist.Foreground="#e36934"
                                            materialDesign:HintAssist.Hint="SEARCH" 
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                            TextChanged="TextSearchStuds_Changed"/>
                                    <Label Content="Students Evaluated:" FontFamily="Roboto" 
                                           FontWeight="Bold"
                                           FontSize="14" 
                                           Foreground="#e36934"
                                           HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="147" Margin="0,-10,0,-1"/>
                                    <CheckBox Name="check_Today"
                                                        Content="Today" FontSize="14"
                                                        materialDesign:CheckBoxAssist.CheckBoxSize="20" Height="50" Margin="19,3,0,3" Checked="check_Today_Checked" Unchecked="check_Today_Unchecked" Width="70" HorizontalAlignment="Left" VerticalAlignment="Center"  />

                                    <DatePicker
                                              SelectedDate="{Binding Path=Date}"
                                              x:Name="customDate" Padding="10 0"
                                              materialDesign:HintAssist.Hint="Custom Date"
                                              FontFamily="Roboto"
                                              FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Height="20"
                                              Style="{StaticResource MaterialDesignDatePicker}" DisplayDate="2022-06-02" HorizontalAlignment="Left" Margin="97,2,0,0" Width="160" CalendarOpened="customDate_CalendarOpened" MouseEnter="customDate_MouseEnter" SelectedDateChanged="customDate_SelectedDateChanged"/>
                                    <!--<Button x:Name="btn_filter"
                                                Height="20"
                                                Width="30" Content="GO"
                                                Padding="1,0,0,0" Foreground="White"
                                                Margin="263,18,20,0"
                                                materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                                materialDesign:RippleAssist.Feedback="#DD000000" 
                                                Click="btn_help_Click" ToolTip="Click to find students evaluated on the day you want" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold">
                                        </Button>-->
                                </Grid>
                                <!--Stackpanel for the Student List-->
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="30,0,30,0">
                                    <!--Datagrid for the Student List-->
                                    <DataGrid x:Name="Students_list"
                                            FontFamily="Roboto"
                                            FontSize="14"
                                            CanUserSortColumns="True"
                                            CanUserAddRows="False"
                                            materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                                            materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                                            ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                                            HorizontalContentAlignment="Stretch" 
                                            VerticalContentAlignment="Stretch"
                                            ToolTip="Student List"
                                            HorizontalAlignment="Center"
                                            Width="900" Height="380"
                                            IsReadOnly="True" 
                                            IsTextSearchEnabled="True" 
                                            CanUserResizeRows="False" 
                                            RowDetailsVisibilityMode="Visible"
                                            CanUserReorderColumns="False" 
                                            CanUserResizeColumns="False" 
                                            GridLinesVisibility="None"
                                            BorderThickness="0" 
                                            Padding="5,5,5,5" 
                                            VerticalAlignment="Top" 
                                            Margin="0,0,0,5" SelectionChanged="Students_list_SelectionChanged"
                                            >

                                        <!--<ColumnHeader>-->
                                        <DataGrid.Columns>
                                            <DataGridTextColumn 
                                                Header="Student ID" 
                                                Binding="{Binding StudentIDNum}"
                                                Width="100" 
                                                FontFamily="Tienne" 
                                                FontSize="16" 
                                                IsReadOnly="True">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn 
                                                Header="Student Name" 
                                                Binding="{Binding StudentName}"
                                                Width="300" 
                                                FontFamily="Tienne" 
                                                FontSize="16" 
                                                IsReadOnly="True"/>
                                            <DataGridTextColumn 
                                                Header="Department" 
                                                Binding="{Binding StudentDep}"
                                                Width="220" 
                                                FontFamily="Tienne" 
                                                FontSize="16" 
                                                IsReadOnly="True"/>
                                            <DataGridTextColumn 
                                                Header="Batch No." 
                                                Binding="{Binding StudentBatch}"
                                                Width="120" 
                                                FontFamily="Tienne" 
                                                FontSize="16" 
                                                IsReadOnly="True"
                                                />
                                            <DataGridTextColumn 
                                                Header="Last Evaluated On" 
                                                Binding="{Binding StudentEvalDate}"
                                                Width="120" 
                                                FontFamily="Tienne" 
                                                FontSize="16" 
                                                IsReadOnly="True"
                                                />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid VerticalAlignment="Bottom" Margin="0,10,0,15" HorizontalAlignment="Right">
                                        <Button x:Name="btn_refreshStudents"
                                                Height="30"
                                                Width="150"
                                                materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                                materialDesign:RippleAssist.Feedback="#DD000000" 
                                                Click="refresh_StudentList" ToolTip="Refresh the table and clear filters" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                                            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                                <Image Source="/Images/refresh.png" Stretch="Uniform" HorizontalAlignment="Left" Margin="0,0,7,0" Width="22" Height="22" VerticalAlignment="Center"/>
                                                <TextBlock Text="REFRESH" 
                                                   Padding="10" 
                                                   Foreground="#DDFCFCFC"
                                                   FontFamily="Tienne" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" Margin="25,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="btn_populateFields"
                                            Content="Generate Report"
                                            Margin="0,2,170,0"
                                            BorderThickness="0,0,0,0"
                                            FontFamily="Tienne" FontWeight="Bold"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#FFFF9800" Foreground="White"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                            materialDesign:RippleAssist.Feedback="#DD000000" 
                                            Grid.Row="2" RenderTransformOrigin="0.567,-0.45" 
                                            Height="30"
                                            VerticalAlignment="Bottom" 
                                            HorizontalAlignment="Right" Width="150" 
                                            Click="btn_populateFields_click"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>
                </TabItem>
                <!--Semester-->
                <!--View Specific Student Record-->
                <TabItem
                        Header="Generate Report"
                        FontFamily="Tienne" FontSize="20" 
                        FontWeight="Bold" Height="50" 
                        Width="250">
                    <Grid Grid.ColumnSpan="2" Margin="30,10,30,200">
